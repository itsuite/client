{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "lib": ["es2017", "dom"]
  },

  "exclude": [
    "node_modules"
  ],

  "filesGlob": [
    "src/**/*.ts"
  ],

  "compileOnSave": false,
  "buildOnSave": false
}
